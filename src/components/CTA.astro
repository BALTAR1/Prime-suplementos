---
// CallToAction.astro
---

<section id="contacto" class="relative bg-white py-12 sm:py-16 lg:py-20 overflow-hidden">
	<!-- Efectos de fondo épicos con muchas líneas decorativas -->
	<div class="absolute inset-0">
		<!-- Patrón de grid sutil -->
		<div class="absolute inset-0 bg-grid-pattern opacity-10"></div>
		
		<!-- Líneas horizontales épicas -->
		<div class="absolute top-0 left-0 w-full h-px bg-gradient-to-r from-transparent via-orange-500/60 to-transparent"></div>
		<div class="absolute top-1/6 left-0 w-full h-px bg-gradient-to-r from-orange-600/40 via-transparent to-orange-600/40"></div>
		<div class="absolute top-1/4 left-0 w-full h-px bg-gradient-to-r from-transparent via-white/30 to-transparent animate-pulse"></div>
		<div class="absolute top-1/3 left-0 w-full h-px bg-gradient-to-r from-orange-500/50 via-orange-600/70 to-orange-500/50"></div>
		<div class="absolute top-1/2 left-0 w-full h-px bg-gradient-to-r from-transparent via-orange-400/80 to-transparent animate-pulse" style="animation-delay: 0.5s;"></div>
		<div class="absolute top-2/3 left-0 w-full h-px bg-gradient-to-r from-orange-600/60 via-white/20 to-orange-600/60"></div>
		<div class="absolute top-3/4 left-0 w-full h-px bg-gradient-to-r from-transparent via-orange-500/40 to-transparent animate-pulse" style="animation-delay: 1s;"></div>
		<div class="absolute top-5/6 left-0 w-full h-px bg-gradient-to-r from-orange-700/30 via-transparent to-orange-700/30"></div>
		<div class="absolute bottom-0 left-0 w-full h-px bg-gradient-to-r from-transparent via-white/40 to-transparent"></div>
		
		<!-- Líneas verticales épicas -->
		<div class="absolute top-0 left-0 w-px h-full bg-gradient-to-b from-transparent via-orange-500/50 to-transparent"></div>
		<div class="absolute top-0 left-1/6 w-px h-full bg-gradient-to-b from-orange-600/40 via-transparent to-orange-600/40"></div>
		<div class="absolute top-0 left-1/4 w-px h-full bg-gradient-to-b from-transparent via-white/25 to-transparent"></div>
		<div class="absolute top-0 left-1/3 w-px h-full bg-gradient-to-b from-orange-500/60 via-orange-600/80 to-orange-500/60"></div>
		<div class="absolute top-0 left-1/2 w-px h-full bg-gradient-to-b from-transparent via-orange-400/70 to-transparent"></div>
		<div class="absolute top-0 right-1/3 w-px h-full bg-gradient-to-b from-orange-600/50 via-white/30 to-orange-600/50"></div>
		<div class="absolute top-0 right-1/4 w-px h-full bg-gradient-to-b from-transparent via-orange-500/45 to-transparent"></div>
		<div class="absolute top-0 right-1/6 w-px h-full bg-gradient-to-b from-orange-700/35 via-transparent to-orange-700/35"></div>
		<div class="absolute top-0 right-0 w-px h-full bg-gradient-to-b from-transparent via-white/35 to-transparent"></div>
		
		<!-- Líneas diagonales épicas -->
		<div class="absolute top-0 left-0 w-full h-full">
			<!-- Diagonales principales -->
			<div class="absolute top-0 left-0 w-full h-px bg-gradient-to-r from-orange-500/60 to-transparent transform rotate-45 origin-left"></div>
			<div class="absolute top-0 right-0 w-full h-px bg-gradient-to-l from-orange-500/60 to-transparent transform -rotate-45 origin-right"></div>
			<div class="absolute bottom-0 left-0 w-full h-px bg-gradient-to-r from-white/40 to-transparent transform -rotate-45 origin-left"></div>
			<div class="absolute bottom-0 right-0 w-full h-px bg-gradient-to-l from-white/40 to-transparent transform rotate-45 origin-right"></div>
			
			<!-- Diagonales secundarias -->
			<div class="absolute top-1/4 left-1/4 w-96 h-px bg-gradient-to-r from-orange-600/50 to-transparent transform rotate-30 origin-left animate-pulse"></div>
			<div class="absolute top-1/4 right-1/4 w-96 h-px bg-gradient-to-l from-orange-600/50 to-transparent transform -rotate-30 origin-right animate-pulse" style="animation-delay: 0.3s;"></div>
			<div class="absolute bottom-1/4 left-1/4 w-80 h-px bg-gradient-to-r from-white/30 to-transparent transform -rotate-30 origin-left animate-pulse" style="animation-delay: 0.6s;"></div>
			<div class="absolute bottom-1/4 right-1/4 w-80 h-px bg-gradient-to-l from-white/30 to-transparent transform rotate-30 origin-right animate-pulse" style="animation-delay: 0.9s;"></div>
			
			<!-- Líneas cruzadas épicas -->
			<div class="absolute top-1/3 left-1/6 w-64 h-px bg-gradient-to-r from-orange-400/40 to-transparent transform rotate-60 origin-left"></div>
			<div class="absolute top-2/3 right-1/6 w-64 h-px bg-gradient-to-l from-orange-400/40 to-transparent transform -rotate-60 origin-right"></div>
			<div class="absolute top-1/2 left-1/3 w-48 h-px bg-gradient-to-r from-white/25 to-transparent transform rotate-15 origin-left animate-pulse" style="animation-delay: 1.2s;"></div>
			<div class="absolute top-1/2 right-1/3 w-48 h-px bg-gradient-to-l from-white/25 to-transparent transform -rotate-15 origin-right animate-pulse" style="animation-delay: 1.5s;"></div>
		</div>
		
		<!-- Efectos de partículas -->
		<div class="absolute top-1/4 left-1/4 w-2 h-2 bg-orange-500 rounded-full animate-ping"></div>
		<div class="absolute top-3/4 right-1/4 w-1 h-1 bg-white rounded-full animate-ping" style="animation-delay: 0.5s;"></div>
		<div class="absolute top-1/2 left-1/6 w-1.5 h-1.5 bg-orange-400 rounded-full animate-ping" style="animation-delay: 1s;"></div>
		<div class="absolute top-1/3 right-1/6 w-1 h-1 bg-white/70 rounded-full animate-ping" style="animation-delay: 1.5s;"></div>
	</div>

	<!-- Contenido principal -->
	<div class="relative z-10 w-full px-4 sm:px-6 lg:w-4/5 lg:mx-auto lg:px-8 text-center">
		
		<h2 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl xl:text-7xl font-black text-gray-900 mb-6 sm:mb-8 leading-tight">
			¿LISTO PARA
			<span class="block text-transparent bg-clip-text bg-gradient-to-r from-orange-500 via-orange-600 to-orange-700">
				TRANSFORMAR
			</span>
			<span class="block text-gray-900">
				TU RENDIMIENTO?
			</span>
		</h2>
		
		<p class="text-lg sm:text-xl md:text-2xl text-gray-600 mb-8 sm:mb-10 lg:mb-12 max-w-4xl mx-auto leading-relaxed">
			Obtén <span class="text-orange-500 font-bold">asesoramiento personalizado</span> y encuentra los 
			<span class="text-gray-900 font-semibold">suplementos perfectos</span> para tus objetivos
		</p>
		
		<!-- Estadísticas rápidas -->
		<div class="flex flex-col sm:flex-row justify-center items-center gap-4 sm:gap-6 lg:gap-8 mb-8 sm:mb-10 lg:mb-12">
			<div class="text-center">
				<div class="text-2xl sm:text-3xl md:text-4xl font-black text-orange-500 mb-1">24/7</div>
				<div class="text-xs sm:text-sm text-gray-600 uppercase tracking-wider">Disponible</div>
			</div>
			<div class="hidden sm:block w-px h-12 bg-gray-300"></div>
			<div class="text-center">
				<div class="text-2xl sm:text-3xl md:text-4xl font-black text-gray-900 mb-1">GRATIS</div>
				<div class="text-xs sm:text-sm text-gray-600 uppercase tracking-wider">Consulta</div>
			</div>
			<div class="hidden sm:block w-px h-12 bg-gray-300"></div>
			<div class="text-center">
				<div class="text-2xl sm:text-3xl md:text-4xl font-black text-orange-500 mb-1">INSTANT</div>
				<div class="text-xs sm:text-sm text-gray-600 uppercase tracking-wider">Respuesta</div>
			</div>
		</div>
		
		<div class="flex flex-col sm:flex-row gap-4 sm:gap-6 justify-center items-center">
			<a 
				href="https://wa.me/5492646615213?text=Hola,%20me%20interesa%20conocer%20más%20sobre%20sus%20suplementos" 
				target="_blank" 
				rel="noopener noreferrer"
				class="group relative bg-gradient-to-r from-orange-600 to-orange-700 text-white px-6 sm:px-8 lg:px-10 py-4 sm:py-5 text-base sm:text-lg font-black uppercase tracking-wider overflow-hidden transition-all duration-300 hover:scale-110 hover:shadow-2xl hover:shadow-orange-600/50 rounded-xl flex items-center gap-2 sm:gap-4 w-full sm:w-auto justify-center"
			>
				<span class="relative z-10 flex items-center">
					<svg class="w-5 h-5 sm:w-6 sm:h-6 lg:w-7 lg:h-7 mr-2 sm:mr-3 group-hover:scale-110 transition-transform duration-300" fill="currentColor" viewBox="0 0 24 24">
						<path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893A11.821 11.821 0 0020.885 3.785"/>
					</svg>
					<span class="hidden sm:inline">CONTACTAR POR WHATSAPP</span>
					<span class="sm:hidden">CONTACTAR</span>
					<svg class="w-4 h-4 sm:w-5 sm:h-5 lg:w-6 lg:h-6 ml-2 sm:ml-3 group-hover:translate-x-2 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
					</svg>
				</span>
				<!-- Efecto de brillo en hover -->
				<div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/20 to-transparent transform -skew-x-12 -translate-x-full group-hover:translate-x-full transition-transform duration-700 ease-in-out"></div>
			</a>
		</div>
	</div>
</section>

<style>
	/* Patrón de grid personalizado */
	.bg-grid-pattern {
		background-image: 
			linear-gradient(rgba(255, 255, 255, 0.08) 1px, transparent 1px),
			linear-gradient(90deg, rgba(255, 255, 255, 0.08) 1px, transparent 1px);
		background-size: 40px 40px;
	}
	
	/* Rotaciones personalizadas */
	.rotate-15 { transform: rotate(15deg); }
	.rotate-30 { transform: rotate(30deg); }
	.rotate-60 { transform: rotate(60deg); }
	.-rotate-15 { transform: rotate(-15deg); }
	.-rotate-30 { transform: rotate(-30deg); }
	.-rotate-60 { transform: rotate(-60deg); }
</style>
