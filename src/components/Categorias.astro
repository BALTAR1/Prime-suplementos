---
import categoriasData from '../data/categorias.json';
const { categorias, estadisticas } = categoriasData;
---

<section id="categorias" class="relative bg-white py-20 overflow-hidden">
	<!-- Efectos de fondo con líneas decorativas -->
	<div class="absolute inset-0">
		<!-- Patrón de grid sutil -->
		<div class="absolute inset-0 bg-grid-pattern opacity-5"></div>
		
		<!-- Líneas decorativas horizontales -->
		<div class="absolute top-1/4 left-0 w-full h-px bg-gradient-to-r from-transparent via-orange-500/30 to-transparent"></div>
		<div class="absolute bottom-1/4 left-0 w-full h-px bg-gradient-to-r from-transparent via-gray-300/40 to-transparent"></div>
		<div class="absolute top-1/3 left-0 w-full h-px bg-gradient-to-r from-transparent via-orange-400/20 to-transparent animate-pulse"></div>
		<div class="absolute bottom-1/3 left-0 w-full h-px bg-gradient-to-r from-transparent via-gray-200/30 to-transparent animate-pulse"></div>
		
		<!-- Líneas decorativas verticales -->
		<div class="absolute top-0 left-1/4 w-px h-full bg-gradient-to-b from-transparent via-orange-500/20 to-transparent"></div>
		<div class="absolute top-0 right-1/4 w-px h-full bg-gradient-to-b from-transparent via-gray-300/25 to-transparent"></div>
		
		<!-- Líneas diagonales -->
		<div class="absolute top-0 left-0 w-full h-full">
			<div class="absolute top-1/4 left-1/4 w-64 h-px bg-gradient-to-r from-orange-500/30 to-transparent transform rotate-45 origin-left"></div>
			<div class="absolute bottom-1/4 right-1/4 w-48 h-px bg-gradient-to-l from-gray-300/30 to-transparent transform -rotate-45 origin-right"></div>
			<div class="absolute top-1/2 left-1/3 w-32 h-px bg-gradient-to-r from-orange-400/25 to-transparent transform rotate-12 origin-left animate-pulse"></div>
		</div>
	</div>

	<!-- Contenido principal -->
	<div class="relative z-10 w-4/5 mx-auto px-4 sm:px-6 lg:px-8">
		<!-- Título de la sección -->
		<div class="text-center mb-16">
			<h2 class="text-4xl md:text-6xl lg:text-7xl font-black text-gray-900 mb-6">
				CATEGORÍAS DE
				<span class="block text-transparent bg-clip-text bg-gradient-to-r from-orange-500 via-orange-600 to-orange-700">
					SUPLEMENTOS
				</span>
			</h2>
			
			<p class="text-lg md:text-xl text-gray-600 max-w-3xl mx-auto leading-relaxed">
				Descubre nuestra amplia gama de suplementos deportivos de la más alta calidad, 
				diseñados para potenciar tu rendimiento y alcanzar tus objetivos fitness.
			</p>
		</div>

		<!-- Grid de categorías -->
		<div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
			{categorias.slice(0, 4).map((categoria) => (
				<div class="group relative bg-white border border-gray-200 hover:border-orange-500/50 transition-all duration-300 hover:shadow-lg rounded-xl overflow-hidden flex flex-col h-full">
					{/* Contenido textual y botón */}
					<div class="relative p-6 z-10 flex flex-col flex-grow justify-between">
					<div>
						<h3 class="text-lg font-black text-gray-900 mb-2 group-hover:text-orange-500 transition-colors duration-300">{categoria.nombre}</h3>
						<p class="text-sm text-gray-600 mb-4 group-hover:text-gray-700 transition-colors duration-300">{categoria.descripcion}</p>
					</div>

					<a href={categoria.enlace} class="block w-full bg-gradient-to-r from-orange-500 to-orange-600 text-white text-center py-3 text-sm font-bold uppercase tracking-wider hover:from-orange-600 hover:to-orange-700 transition-all duration-300 rounded-lg">
						VER PRODUCTOS
					</a>
					</div>
				</div>
			))}
		</div>
	</div>
</section>

<style>
	/* Patrón de grid personalizado */
	.bg-grid-pattern {
		background-image: 
			linear-gradient(rgba(255, 255, 255, 0.05) 1px, transparent 1px),
			linear-gradient(90deg, rgba(255, 255, 255, 0.05) 1px, transparent 1px);
		background-size: 50px 50px;
	}
</style>